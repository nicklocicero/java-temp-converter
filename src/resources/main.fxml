<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="edu.cnm.deepdive.temperature.Controller"
  xmlns:fx="http://javafx.com/fxml"
  alignment="center"
  hgap="10"
  vgap="10">

  <padding>
    <Insets bottom="10" top="10" left="10" right="10" />
  </padding>

  <TextField fx:id="celsiusInput"
    GridPane.columnIndex="0"
    GridPane.rowIndex="0"
    GridPane.columnSpan="2" />

  <Button
    fx:id="celsiusToFahrenheit"
    GridPane.columnIndex="0"
    GridPane.rowIndex="1"
    text="↓ C to F ↓"
    onAction="#convertToFahrenheit" />

  <Button
    fx:id="fahrenheitToCelsius"
    GridPane.columnIndex="1"
    GridPane.rowIndex="1"
    text="↑ F to C ↑"
    onAction="#convertToCelsius" />

  <TextField fx:id="fahrenheitInput"
    GridPane.columnIndex="0"
    GridPane.rowIndex="2"
    GridPane.columnSpan="2" />

</GridPane>